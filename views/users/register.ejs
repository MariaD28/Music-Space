<% layout('layouts/boilerplate') %> <!-- Set the layout for this template -->
<div class="card-register">
     <!-- Start of registration card -->
    <h1 class="h1-register">Register</h1>

    <!-- Registration form -->
    <form action="/musicspace/register" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label-register">Username</label>
            <input type="text" id="username" class="form-control input-field register" name="username" required>
            <div class="valid-feedback">
                Good to go!
            </div>
        </div>
         <!-- Email field -->
        <div class="mb-3">
            <label for="email" class="form-label-register">Email</label>
            <input type="email" id="email" class="form-control input-field register" name="email" required>
            <div class="valid-feedback">
                Good to go!
            </div>
        </div>
          <!-- Password field -->
        <div class="mb-3">
            <label for="password" class="form-label-register">Password</label>
            <input type="password" id="password" class="form-control input-field register" name="password" required>
            <div class="valid-feedback">
                Good to go!
            </div>
        </div>
         <!-- Register button -->
        <div class="button-wrapper">
          <button class="btn btn-success register">Register</button>
        </div>
    </form>
</div>
